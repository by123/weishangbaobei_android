<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/main_color" />
            <corners android:topRightRadius="@dimen/dp_2" android:bottomRightRadius="@dimen/dp_2" />
            <stroke android:width="@dimen/dp_1" android:color="@color/main_color" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/main_color" />
            <corners android:topRightRadius="@dimen/dp_2" android:bottomRightRadius="@dimen/dp_2" />
            <stroke android:width="@dimen/dp_1" android:color="@color/main_color" />
        </shape>
    </item>
</selector>